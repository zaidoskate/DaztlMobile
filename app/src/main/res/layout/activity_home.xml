<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_daztl"
        android:contentDescription="@string/logo_daztl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:hint="Buscar"
        android:backgroundTint="@color/bg_gray"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_white"
        android:padding="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Biblioteca -->
    <Button
        android:id="@+id/btnMyPlaylists"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/accent_blue"
        android:text="Biblioteca"
        android:textAllCaps="false"
        android:textColor="@color/bg_dark"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cerrar sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/bg_gray"
        android:text="Cerrar sesión"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        app:layout_constraintTop_toBottomOf="@id/btnMyPlaylists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón anterior -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Anterior"
        android:src="@drawable/ic_skip_previous"
        app:tint="@color/text_white"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón Play/Pause -->
    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play/Pause"
        android:src="@drawable/ic_play"
        app:tint="@color/text_white"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Botón siguiente -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Siguiente"
        android:src="@drawable/ic_skip_next"
        app:tint="@color/text_white"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra decorativa -->
    <View
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginBottom="16dp"
        android:background="@color/bg_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
